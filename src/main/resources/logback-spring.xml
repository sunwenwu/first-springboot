<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>

    <property name="app.log" value="my-springboot"/>
    <property name="LOG_HOME" value="/opt/logs/${app.log}"/>
    <property name="PATTERN" value="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%c{12}:%L] %msg%n"/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>${PATTERN}</pattern>
        </encoder>
    </appender>
    <appender name="async_log" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="file"/>
    </appender>

    <springProfile name="test,dev">
        <root level="info">
            <appender-ref ref="console"/>
            <appender-ref ref="async_log"/>
        </root>
        <logger name="com.example.firstspringboot" level="debug" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="async_log"/>
        </logger>
    </springProfile>
    <springProfile name="prod">
        <root level="info">
            <appender-ref ref="console"/>
            <appender-ref ref="async_log"/>
        </root>
        <logger name="com.example.firstspringboot" level="info" additivity="false">
            <appender-ref ref="console"/>
            <appender-ref ref="async_log"/>
        </logger>
    </springProfile>
</configuration>